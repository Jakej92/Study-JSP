package com.app.controller.admin;

import java.io.IOException;

import com.app.Result;

import jakarta.servlet.ServletException;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

public class AdminFrontController extends HttpServlet {
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		String uri = req.getRequestURI();
		String target = uri.substring(0, uri.lastIndexOf(".")).replace(req.getContextPath(), "");
		Result result = null;
		
		if(target.equals("/join")) {
			result = new JoinController().execute(req, resp);
		}else if(target.equals("/join-ok")) {
			result = new JoinOkController().execute(req, resp);
		}
		
		

		    // ğŸ”¥ ìš”ì²­ ë¡œê·¸ ì¶”ê°€
		    System.out.println("ğŸ“Œ ìš”ì²­ëœ URI: " + uri);
		    System.out.println("ğŸ“Œ Context Path: " + req.getContextPath());
		    System.out.println("ğŸ“Œ Target: " + target);


		    if(target.equals("/join")) {
		        System.out.println("âœ… /join ìš”ì²­ ê°ì§€! JoinController ì‹¤í–‰...");
		        result = new JoinController().execute(req, resp);
		    } else if(target.equals("/join-ok")) {
		        System.out.println("âœ… /join-ok ìš”ì²­ ê°ì§€! JoinOkController ì‹¤í–‰...");
		        result = new JoinOkController().execute(req, resp);
		    }

		    if(result != null) {
		        if(result.isForward()) {
		            System.out.println("â¡ Forward ë°©ì‹ìœ¼ë¡œ ì´ë™: " + result.getPath());
		            req.getRequestDispatcher(result.getPath()).forward(req, resp);
		        } else {
		            System.out.println("â¡ Redirect ë°©ì‹ìœ¼ë¡œ ì´ë™: " + result.getPath());
		            resp.sendRedirect(result.getPath());
		        }
		    } else {
		        System.out.println("âŒ í•´ë‹¹ ìš”ì²­ì„ ì²˜ë¦¬í•  ì»¨íŠ¸ë¡¤ëŸ¬ê°€ ì—†ìŒ: " + target);
		        resp.sendError(HttpServletResponse.SC_NOT_FOUND);
		    }

		
		
		
		
		if(result != null) {
			if(result.isForward()) {
				req.getRequestDispatcher(result.getPath()).forward(req, resp);
			}else {
				resp.sendRedirect(result.getPath());
			}
		}
	}
}
