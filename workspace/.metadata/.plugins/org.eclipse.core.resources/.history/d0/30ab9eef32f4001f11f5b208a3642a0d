	        result.setPath("/join.admin?account=false");  
	        result.setForward(false); // âœ… ğŸ”¥ Redirect ì ìš©!
	        return result;
	    }

	    // âœ… ì¤‘ë³µëœ ê³„ì •ì´ ì—†ì„ ë•Œë§Œ íšŒì›ê°€ì… ì§„í–‰
	    adminDAO.insert(adminVO);
	    System.out.println("âœ… íšŒì›ê°€ì… ì„±ê³µ! ê´€ë¦¬ì ê³„ì • ì¶”ê°€ë¨.");

	    session.setAttribute("admin", adminVO);

	    // ğŸ”¥ íšŒì›ê°€ì… í›„ ë‹¤ì‹œ ì¤‘ë³µ ê²€ì‚¬ (í…ŒìŠ¤íŠ¸ ëª©ì )
	    Optional<AdminVO> checkAdmin = adminDAO.selectByAdminAccount(adminAccount);
	    if (checkAdmin.isPresent()) {
	        System.out.println("âœ… íšŒì›ê°€ì… í›„ ê³„ì •ì´ ì •ìƒì ìœ¼ë¡œ DBì— ì¡´ì¬í•¨.");
	    } else {
	        System.out.println("âŒ íšŒì›ê°€ì… í›„ì—ë„ ê³„ì •ì´ ì¡´ì¬í•˜ì§€ ì•ŠìŒ! SQL ë¬¸ì œ ê°€ëŠ¥ì„± ìˆìŒ.");
	    }

	    result.setPath("/login.admin");  // âœ… ğŸ”¥ íšŒì›ê°€ì… ì„±ê³µ ì‹œ ë¡œê·¸ì¸ í˜ì´ì§€ë¡œ ì´ë™
//	    result.setForward(false);
